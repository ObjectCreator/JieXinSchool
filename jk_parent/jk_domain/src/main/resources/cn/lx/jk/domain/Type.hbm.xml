<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC 
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping package="cn.lx.jk.domain">
	<!-- 配置类的映射 -->
	<class name="Type" table="TYPE_C">
		<!-- 1.配置主键生成策略 -->
		<id name="id" column="TYPE_ID" type="string">
			<generator class="assigned"/>
		</id>
		
		<!-- 2.配置其他属性 -->
	
		<property name="typeName" column="TYPE_NAME" type="string"/>
		<property name="typeSort" column="TYPE_SORT" type="integer"/>

	</class>

</hibernate-mapping>