<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC 
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping package="cn.lx.jk.domain">
	<!-- 配置类的映射 -->
	<class name="UserBaseInfo" table="USER_BASE_INFO">
		<!-- 1.配置主键生成策略 -->
		<id name="id" column="USER_BASE_INFO_ID" type="string">
			<generator class="assigned"/>
		</id>
		
		<!-- 2.配置其他属性 -->
		
		<property name="nickName" column="NICK_NAME" type="string"/>
		<property name="tel" column="TEL" type="string"/>
		<property name="nation" column="NATION" type="string"/>
		<property name="homeAddress" column="HOME_ADDRESS" type="string"/>
		<property name="politicsStatus" column="POLITICS_STATUS" type="string"/>
		<property name="speciality" column="SPECIALITY" type="string"/>
		<property name="img" column="IMG" type="string"/>

	</class>

</hibernate-mapping>